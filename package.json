{
  "name": "penx-sync-server",
  "version": "0.0.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch index.ts",
    "build": "tsc",
    "deploy": "docker-compose -p penx-sync-server -f docker-compose.yml up --build -d",
    "deploy:develop": "docker-compose -p penx-sync-server-develop -f docker-compose.develop.yml up --build -d",
    "deploy:local": "docker-compose -p penx-sync-server-local -f docker-compose.local.yml up --build -d",
    "start:prod": "cross-env NODE_ENV=production node index.js",
    "start": "node index.js"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^9.0.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.3",
    "body-parser": "^1.20.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fs-jetpack": "^5.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "tslib": "^2.6.2"
  }
}